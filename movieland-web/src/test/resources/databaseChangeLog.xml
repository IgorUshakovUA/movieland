<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="Igor Ushakov" id="sqlFile-schema" runAlways="true">
        <sqlFile dbms="h2"
                 relativeToChangelogFile="true"
                 path="classpath:/db/schema.sql"/>
    </changeSet>
    <changeSet author="Igor Ushakov" id="sqlFile-test-data" runAlways="true">
        <sqlFile dbms="h2"
                 relativeToChangelogFile="true"
                 path="classpath:/db/test-data.sql"/>
    </changeSet>
</databaseChangeLog>